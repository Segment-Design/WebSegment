{
	"$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
    "include": ["*.js", "*.ts"],
    "ignore": [
			"node_modules/",
			"pnpm-lock.yaml",
			"sigma/target/",
			"sigma/crates/node/index.d.ts",
			"sigma/crates/node/index.js"
    ]
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 140
  }
}
